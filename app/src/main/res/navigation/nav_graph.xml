<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.weatherpictureapp.presentation.history_list.HistoryListFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_history_list" >
		<action
			android:id="@+id/action_nav_home_to_addWeatherPhotoFragment"
			app:destination="@id/addWeatherPhotoFragment" />
	</fragment>
	<fragment
		android:id="@+id/addWeatherPhotoFragment"
		android:name="com.example.weatherpictureapp.presentation.add_weather_photo.AddWeatherPhotoFragment"
		android:label="fragment_add_weather_photo"
		tools:layout="@layout/fragment_add_weather_photo" >
		<argument
			android:name="lastKnownLocation"
			app:argType="android.location.Location" />
	</fragment>

</navigation>
